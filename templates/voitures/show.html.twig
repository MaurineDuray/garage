{% extends 'base.html.twig' %}

{% block title %} Informations de {{voiture.marque}} {{voiture.modele}}{% endblock %}

{% block body %}
    <div class="annonce-title"  id="pres">
        <h2>Informations sur le véhicule:
        <br>- {{voiture.marque}} - <i>{{voiture.modele}}</i> -</h2>
        <div class="cover">
            <img src="../uploads/{{voiture.image}}" alt="">
        </div>
        
    </div>

    
        <div class="container">
            <div class="row align-items-center">
                <div class=" galery col-md-7 align-items-center">
                
                    <div class="bd-example">
                    <h3>Galerie d'images du véhicule</h3>
                        <div id="carouselExampleCaptions" class="carousel" data-bs-ride="false">
                            <div class="carousel-indicators">
                            {% for picture in voiture.pictures %}
                                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="{{loop.index0}}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{loop.index}}"></button>
                            {% endfor %} 
                            
                            </div>
                            <div class="carousel-inner">
                                {% for picture in voiture.pictures %}
                                    <div class="carousel-item {% if loop.first %}active{% endif %}">
                                        <img src="{{picture.file}}" class="d-block w-100" alt="image de {{voiture.marque}}">
                                        <div class="carousel-caption d-none d-md-block">
                                                <h5>{{voiture.marque}}</h5>
                                                <p>{{picture.caption}}</p>
                                        </div>
                                    </div>
                                {% endfor %}
                            
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                
                </div>
            
            </div> 
            <div class="col-md-5 " id="ficheInfo">
                <h3>Fiche info du véhicule</h3>
                <div class="card infoP">
                    <h3>Informations principales</h3>
                    <p class="marque"><u>Marque du véhicule :</u> <br>{{voiture.marque}}</p> 
                    <p class="model"><u>Modèle du véhicule :</u><br> {{voiture.modele}}</p> 
                    <p class="km"><u>Kilométrage du véhicule :</u> {{voiture.km}} kilomètres</p> 
                    <p class="price"><u>Prix de vente :</u> {{voiture.prix}} €</p> 
                    <button class="btn-warning btn">Nous contacter</button>
                </div>
                
                
                  
                </p> 
            </div>
            </div>
            <hr>
        </div>
             
        <div class="container description">
        <div class="row justify-content-center">
            <div class="card col-md-4 my-3 ">
                    <h3>Caractéristiques</h3>
                    <p><u>Nombre de propriétaire(s) du véhicule :</u><br> {{voiture.nbProprio}} propriétaire(s)</p> 
                    <p><u>Cylindrée :</u> {{voiture.cylindree}} cm3</p> 
                    <p><u>Puissance :</u> {{voiture.puissance}} chevaux</p> 
                    <p><u>Carburant :</u> {{voiture.carburant}}</p> 
                    <p><u>Année de mise en circulation :</u> {{voiture.annee}}<br></p> 
                    <p><u>Transmission :</u> Boîte {{voiture.transmission}}</p> 
                </div>
            <div class="card infoSup col-md-7 my-3">
            <h3>Informations supplémentaires</h3>
                <p><u><b>Description :</b></u><br>{{voiture.description}}</p> 
                <p><u>Options :</u><br>
                    <li>{{voiture.options}}</li>
            </div>
        </div>
           
        </div>
       
    
{% endblock %}